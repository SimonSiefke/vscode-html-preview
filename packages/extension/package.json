{
  "preview": true,
  "name": "html-preview",
  "displayName": "Html Preview",
  "description": "Preview for Html files",
  "version": "1.0.0",
  "publisher": "SimonSiefke",
  "license": "MIT",
  "homepage": "https://github.com/SimonSiefke/vscode-html-preview",
  "repository": {
    "type": "git",
    "url": "https://github.com/SimonSiefke/vscode-html-preview.git"
  },
  "bugs": {
    "url": "https://github.com/SimonSiefke/vscode-html-preview/issues"
  },
  "icon": "images/icon.png",
  "galleryBanner": {
    "color": "#242b2b",
    "theme": "dark"
  },
  "engines": {
    "vscode": "^1.36.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "html preview",
    "html",
    "preview",
    "live"
  ],
  "activationEvents": [
    "onLanguage:html"
  ],
  "contributes": {
    "commands": [
      {
        "category": "Html Preview",
        "command": "htmlPreview.openPreview",
        "title": "Open Preview"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Html Preview",
      "properties": {
        "htmlPreview.highlight": {
          "type": "boolean",
          "default": true,
          "description": "Highlight elements in the browser when they are selected in VSCode"
        }
      }
    }
  },
  "scripts": {
    "dev": "cd ../../ && npm run dev",
    "pretest": "tsc -b",
    "e2e": "cross-env NODE_ENV=test node ./dist/test/runTest.js"
  },
  "main": "dist/extensionMain.js",
  "dependencies": {
    "html-preview-service": "^0.0.0-development",
    "open": "^6.4.0"
  },
  "devDependencies": {
    "@types/mocha": "^5.2.7",
    "@types/vscode": "^1.37.0",
    "cross-env": "^5.2.0",
    "mocha": "^6.2.0",
    "puppeteer": "^1.19.0",
    "vscode-test": "^1.2.0"
  }
}
