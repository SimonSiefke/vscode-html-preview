{
  "name": "code-mirror-sample",
  "version": "0.0.0-development",
  "license": "MIT",
  "scripts": {
    "dev": "npm run build:remote && concurrently \"npm run watch\" \"http-server -s -o -p 3000\"",
    "e2e": "npm run build && start-server-and-test \"http-server -s -p 3000\" http://localhost:3000 \"cypress run\"",
    "e2e:open": "npm run build && start-server-and-test \"http-server -s -p 3000\" http://localhost:3000 \"cypress open\"",
    "build:local": "rollup --config ./rollup/local.rollup.config.js",
    "build:remote": "rollup --config ./rollup/remote.rollup.config.js",
    "build": "npm run build:remote && npm run build:local",
    "watch:local": "npm run build:local -- --watch",
    "watch:remote": "npm run build:remote -- --watch",
    "watch": "concurrently \"npm run watch:local\" \"npm run watch:remote\""
  },
  "dependencies": {
    "@emmetio/codemirror-plugin": "^0.5.4",
    "codemirror": "^5.49.2",
    "html-preview-web": "^0.0.0-development"
  },
  "devDependencies": {
    "@types/codemirror": "0.0.80",
    "concurrently": "^5.0.0",
    "cypress": "^3.6.1",
    "http-server": "^0.11.1",
    "rollup": "^1.26.5",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-sourcemaps": "^0.4.2",
    "rollup-plugin-terser": "^5.1.2",
    "rollup-plugin-typescript2": "^0.25.2",
    "start-server-and-test": "^1.10.6",
    "typescript": "^3.7.2"
  }
}
