{
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    "**/dist": true,
    "**/.vscode": true,
    "deprecated": true,
    "**/node_modules": true,
    "playground": true,
    "webpack": true,
    ".gitignore": true,
    ".travis.yml": true,
    "CHANGELOG.md": true,
    "lerna.json": true,
    "LICENSE": true,
    "**/package-lock.json": true,
    "ThirdPartyNotices.txt": true,
    "tsconfig-base.json": true,
    "tsconfig-noncomposite-base.json": true,
    "tsconfig.json": true,
    "scripts": true,
    "**/tsconfig.tsbuildinfo": true
  },
  "search.exclude": {
    "**/node_modules": true,
    "**/bower_components": true,
    "**/dist": true
  },
  "files.watcherExclude": {
    "**/.git/objects/**": true,
    "**/.git/subtree-cache/**": true,
    "**/node_modules/**": true,
    "**/dist/**": true
  },
  "files.trimTrailingWhitespace": false,
  "editor.formatOnSave": true,
  "eslint.autoFixOnSave": true,
  "json.schemas": [
    {
      "fileMatch": [
        "i18n/de.json",
        "i18n/en.json",
        "i18n/es.json",
        "i18n/fr.json",
        "i18n/it.json",
        "i18n/ja.json",
        "i18n/nl.json",
        "i18n/ru.json",
        "i18n.zh-cn.json"
      ],
      "url": "./i18n/_schema.json"
    }
  ]
}
