{
  "[html]": {
    "editor.formatOnSave": true
  },
  "search.exclude": {
    "**/node_modules": true,
    "**/bower_components": true,
    "**/dist": true
  },
  "files.watcherExclude": {
    "**/.git/**": true,
    "**/.git/subtree-cache/**": true,
    "**/node_modules/**": true,
    "**/dist/**": true
  },
  "files.trimTrailingWhitespace": true,
  "editor.formatOnSave": true,
  "json.schemas": [
    {
      "fileMatch": [
        "i18n/de.json",
        "i18n/en.json",
        "i18n/es.json",
        "i18n/fr.json",
        "i18n/it.json",
        "i18n/ja.json",
        "i18n/nl.json",
        "i18n/ru.json",
        "i18n/zh-cn.json"
      ],
      "url": "./i18n/_schema.json"
    }
  ]
}
