{
  "preview": true,
  "name": "html-preview",
  "displayName": "Html Preview",
  "description": "Preview for Html files",
  "version": "1.0.0",
  "publisher": "SimonSiefke",
  "repository": {
    "type": "git",
    "url": "https://github.com/SimonSiefke/vscode-html-preview.git"
  },
  "license": "MIT",
  "main": "packages/extension/dist/packages/extension/src/extension.js",
  "engines": {
    "vscode": "^1.36.0"
  },
  "scripts": {
    "dev": "cd packages/extension && tsc -b --watch",
    "generate:diffTests": "babel-node --presets latest-node src/VirtualDom/generateDiffTestCases.js",
    "generate:watch:diffTests": "nodemon --watch src/VirtualDom/diff.test.txt --exec npm run generate:diffTests"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "html preview",
    "svg",
    "preview",
    "live"
  ],
  "activationEvents": [
    "onLanguage:html"
  ],
  "devDependencies": {
    "@babel/core": "^7.5.5",
    "@babel/node": "^7.5.5",
    "@types/jest": "^24.0.15",
    "@types/json5": "0.0.30",
    "@types/node": "^12.6.3",
    "@types/vscode": "^1.36.0",
    "@types/ws": "^6.0.1",
    "eslint": "^6.0.1",
    "eslint-config-xo": "^0.26.0",
    "eslint-plugin-jest": "^22.8.0",
    "jest": "^24.8.0",
    "prettier": "^1.18.2",
    "semantic-release": "^15.13.18",
    "semantic-release-vsce": "^2.2.8",
    "ts-jest": "^24.0.2",
    "typescript": "^3.5.3"
  },
  "eslintConfig": {
    "extends": [
      "xo/esnext"
    ],
    "overrides": [
      {
        "files": [
          "src/**/*.test.js"
        ],
        "env": {
          "jest": true
        },
        "plugins": [
          "jest"
        ],
        "rules": {
          "jest/no-disabled-tests": "warn",
          "jest/no-focused-tests": "error",
          "jest/no-identical-title": "error",
          "jest/prefer-to-have-length": "warn",
          "jest/valid-expect": "error"
        }
      }
    ]
  },
  "eslintIgnore": [
    "*.ts",
    "*.html",
    "*.md",
    "*.generated.test.js"
  ],
  "dependencies": {
    "@types/relaxed-json": "^1.0.0",
    "babel-preset-latest-node": "^3.2.1",
    "json5": "^2.1.0",
    "jsonc-parser": "^2.1.0",
    "jsonschema": "^1.2.4",
    "really-relaxed-json": "^0.2.24",
    "relaxed-json": "^1.0.3",
    "ws": "^7.1.0"
  },
  "jest": {
    "preset": "ts-jest/presets/js-with-ts",
    "testEnvironment": "node",
    "globals": {
      "ts-jest": {
        "diagnostics": false
      }
    }
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "trailingComma": "es5",
    "arrowParens": "avoid"
  },
  "wallaby": {
    "files": [
      "src/**/*.js",
      "!src/**/*test.js"
    ],
    "tests": [
      "src/**/*test.js"
    ],
    "env": {
      "type": "node",
      "runner": "node"
    },
    "testFramework": "jest"
  },
  "release": {
    "verifyConditions": [
      "semantic-release-vsce"
    ],
    "prepare": [
      {
        "path": "semantic-release-vsce",
        "packageVsix": "extension.vsix"
      }
    ],
    "publish": [
      "semantic-release-vsce"
    ]
  },
  "renovate": {
    "extends": [
      "bitworkers"
    ]
  }
}
