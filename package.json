{
  "name": "vscode-html-preview",
  "scripts": {
    "dev": "tsc -b -w",
    "clean": "rimraf dist",
    "package": "npm run clean && webpack --mode production --config ./webpack/extension.webpack.config.js && webpack --mode production --config ./webpack/injected-code.webpack.config.js&& node scripts/package.js && npm run bundlesize",
    "postinstall": "lerna bootstrap && tsc -b",
    "generate:diffTests": "cd packages/virtual-dom && npm run generate:diffTests",
    "generate:watch:diffTests": "cd packages/virtual-dom && npm run generate:watch:diffTests",
    "generate:genDomTests": "cd packages/html-preview-service && npm run generate:genDomTests",
    "generate:watch:genDomTests": "cd packages/html-preview-service && npm run generate:watch:genDomTests",
    "test": "jest",
    "bundlesize": "bundlesize",
    "update-highlight-css": "postcss packages/injected-code/src/highlight/highlight.css --no-map --output packages/injected-code/src/highlight/highlight.min.css && node scripts/update-highlight-css",
    "e2e": "cd packages/extension && npm run e2e"
  },
  "devDependencies": {
    "@babel/core": "^7.5.5",
    "@babel/node": "^7.5.5",
    "@types/jest": "^24.0.16",
    "@types/lodash": "^4.14.136",
    "@types/puppeteer": "^1.19.0",
    "@types/webpack": "^4.32.1",
    "autoprefixer": "^9.6.1",
    "babel-preset-latest-node": "^3.2.1",
    "bundlesize": "^0.18.0",
    "cssnano": "^4.1.10",
    "eslint": "^6.0.1",
    "eslint-config-xo": "^0.26.0",
    "eslint-plugin-jest": "^22.8.0",
    "jest": "^24.8.0",
    "jsonschema": "^1.2.4",
    "lerna": "^3.16.4",
    "lodash": "^4.17.15",
    "postcss": "^7.0.17",
    "postcss-cli": "^6.1.3",
    "prettier": "^1.18.2",
    "really-relaxed-json": "^0.2.24",
    "rimraf": "^2.6.3",
    "semantic-release": "^15.13.18",
    "semantic-release-vsce": "^2.2.8",
    "ts-jest": "^24.0.2",
    "ts-loader": "^6.0.4",
    "ts-node": "^8.3.0",
    "typescript": "^3.5.3",
    "webpack": "^4.39.1",
    "webpack-cli": "^3.3.6"
  },
  "eslintConfig": {
    "extends": [
      "xo/esnext"
    ],
    "rules": {
      "capitalized-comments": "off"
    },
    "overrides": [
      {
        "files": [
          "src/**/*.test.js"
        ],
        "env": {
          "jest": true
        },
        "plugins": [
          "jest"
        ],
        "rules": {
          "jest/no-disabled-tests": "warn",
          "jest/no-focused-tests": "error",
          "jest/no-identical-title": "error",
          "jest/prefer-to-have-length": "warn",
          "jest/valid-expect": "error"
        }
      }
    ]
  },
  "eslintIgnore": [
    "*.ts",
    "*.html",
    "*.md",
    "*.generated.test.js"
  ],
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testMatch": [
      "**/packages/**/*.test.ts"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/dist/",
      "extension/src/test"
    ]
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "trailingComma": "es5",
    "arrowParens": "avoid",
    "printWidth": 100
  },
  "wallaby": {
    "files": [
      "src/**/*.js",
      "!src/**/*test.js"
    ],
    "tests": [
      "src/**/*test.js"
    ],
    "env": {
      "type": "node",
      "runner": "node"
    },
    "testFramework": "jest"
  },
  "release": {
    "verifyConditions": [
      "semantic-release-vsce"
    ],
    "prepare": [
      {
        "path": "semantic-release-vsce",
        "packageVsix": "extension.vsix"
      }
    ],
    "publish": [
      "semantic-release-vsce"
    ]
  },
  "bundlesize": [
    {
      "path": "./dist/packages/extension/dist/extensionMain.js",
      "maxSize": "160.0 kB",
      "compression": "none"
    },
    {
      "path": "./dist/packages/injected-code/dist/injectedCodeMain.js",
      "maxSize": "12.0 kB",
      "compression": "none"
    }
  ],
  "renovate": {
    "extends": [
      "bitworkers"
    ]
  },
  "quokka": {
    "ignoreExternalFileChanges": true
  },
  "browserslist": [
    "last 1 version",
    "> 1%",
    "IE 10"
  ],
  "postcss": {
    "plugins": {
      "autoprefixer": {},
      "cssnano": {}
    }
  }
}
