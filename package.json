{
  "preview": true,
  "name": "html-preview",
  "displayName": "Html Preview",
  "description": "Preview for Html files",
  "version": "1.0.0",
  "publisher": "SimonSiefke",
  "repository": {
    "type": "git",
    "url": "https://github.com/SimonSiefke/vscode-html-preview.git"
  },
  "license": "MIT",
  "main": "packages/extension/dist/packages/extension/src/extension.js",
  "engines": {
    "vscode": "^1.36.0"
  },
  "scripts": {
    "dev": "cd packages/extension && tsc -b --watch"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "html preview",
    "svg",
    "preview",
    "live"
  ],
  "activationEvents": [
    "onLanguage:html"
  ],
  "devDependencies": {
    "@types/jest": "^24.0.15",
    "@types/node": "^12.6.3",
    "@types/vscode": "^1.36.0",
    "@types/ws": "^6.0.1",
    "eslint": "^6.0.1",
    "eslint-config-xo": "^0.26.0",
    "eslint-plugin-jest": "^22.8.0",
    "jest": "^24.8.0",
    "prettier": "^1.18.2",
    "prettier-config-bitworkers": "^1.5.1",
    "semantic-release": "^15.13.18",
    "semantic-release-vsce": "^2.2.8",
    "ts-jest": "^24.0.2",
    "typescript": "^3.5.3"
  },
  "eslintConfig": {
    "extends": [
      "xo/esnext"
    ],
    "overrides": [
      {
        "files": [
          "src/**/*.test.js"
        ],
        "env": {
          "jest": true
        },
        "plugins": [
          "jest"
        ],
        "rules": {
          "jest/no-disabled-tests": "warn",
          "jest/no-focused-tests": "error",
          "jest/no-identical-title": "error",
          "jest/prefer-to-have-length": "warn",
          "jest/valid-expect": "error"
        }
      }
    ]
  },
  "eslintIgnore": [
    "*.ts",
    "*.html",
    "*.md"
  ],
  "dependencies": {
    "ws": "^7.1.0"
  }
}
